<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/bg_gradient">

    <!-- App Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To\nRandom Password Generator"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Generated Password -->
    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:text="Your password will appear here"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="@drawable/bg_password"
        android:layout_marginTop="40dp"
        android:elevation="8dp"
        android:shadowColor="#66000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Generate Button -->
    <Button
        android:id="@+id/btnGenerate"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Generate Password"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <!-- Copy Button -->
    <Button
        android:id="@+id/btnCopy"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Copy Password"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2962FF"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnGenerate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Share Button -->
    <Button
        android:id="@+id/btnShare"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Share Password"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2962FF"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnCopy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Note TextView -->
    <TextView
        android:id="@+id/tvNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Note: Each password is generated randomly with 8 to 16 characters."
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnShare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
